@{
    ViewBag.Title = "Login";
}

<h2>Espace sécurisé</h2>
<form method="post">
	<div class="editor-label">
	Login
	</div>
	<div class="editor-field">
	<input type="text" id="login" name="login" />
	</div>

	<div class="editor-label">
	Mot de passe
	</div>
	<div class="editor-field">
	<input type="password" id="mdp" name="mdp" />
	</div>
	<br/>
	<input type="submit" value="Go !" />
	@ViewBag.Message
</form>